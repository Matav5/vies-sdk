{
    "name": "matav5/vies-sdk",
    "description": "PHP SDK for the EU VIES (VAT Information Exchange System) REST API",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "keywords": ["vies", "vat", "eu", "tax", "sdk"],
    "authors": [
        {
            "name": "matav5",
            "email": "verner.matej@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/http-client": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Matav5\\ViesSdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Matav5\\ViesSdk\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --exclude-group integration",
        "test:integration": "phpunit --group integration",
        "test:all": "phpunit"
    }
}
